<%= simple_form_for @verse, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :song_id %>
  <%= f.input :order %>
  <%= f.association :verse_type, :include_blank => t('.select_verse_type') %>
  <%= f.input :note %>
  <%= f.input :content, :input_html => { :cols => 80, :rows => 8 } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                verses_path, :class => 'btn' %>
  </div>
<% end %>
