<%= simple_form_for @verse_type, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :order %>
  <%= f.input :shortcut_key %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                verse_types_path, :class => 'btn' %>
  </div>
<% end %>
