<%= simple_form_for @language, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :code, :input_html => { :maxlength => 2 } %>%>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                languages_path, :class => 'btn' %>
  </div>
<% end %>
